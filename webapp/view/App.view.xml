<mvc:View controllerName="sap.ui.demo.walkthrough.controller.App" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
	<Shell id="_IDEGen_shell0">
		<App id="coolApp">
			<pages>
				<Page id="mainPage" title="{i18n>myTitle}">
					<content>
						<Panel id="helloPanel" headerText="{i18n>helloPanelTitle}">
							<content>
								<Button id="btnHello" text="{i18n>showHelloButtonText}" press=".onShowHello"/>
								<Input id="inHello" value="{/recipient/name}" description="Hello {/recipient/name}" valueLiveUpdate="true" width="60%"/>
							</content>
						</Panel>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>