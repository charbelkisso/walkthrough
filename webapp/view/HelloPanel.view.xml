<mvc:View controllerName="sap.ui.demo.walkthrough.controller.HelloPanel" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Panel id="_IDEGen_panel0" headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto">
		<content>
			<Button id="_IDEGen_button0" text="{i18n>showHelloButtonText}" press=".onShowHello" class="myAppDemoWT myCustomButton"/>
			<Button id="helloDialogButton" text="{i18n>openDialogButtonText}" press=".onOpenDialog" class="sapUiSmallMarginEnd" icon="sap-icon://world"/>
			<Input id="_IDEGen_input0" value="{/recipient/name}" valueLiveUpdate="true" width="60%"/>
			<FormattedText id="_IDEGen_formattedtext0" htmlText="Hello {/recipient/name}"
				class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"/>
		</content>
	</Panel>
</mvc:View>